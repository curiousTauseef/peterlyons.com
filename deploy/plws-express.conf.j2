description "start and stop the peterlyons.com express.js/node.js server"
author "Peter Lyons <pete@peterlyons.com>"

start on filesystem and started networking
respawn
chdir {{app_root}}/current
setuid {{express_user}}
setgid {{express_user}}
env PATH=./node_modules/.bin:./node/bin:/usr/bin
env NODE_ENV=production
env PLWS_HOSTNAME={{hostname}}
exec app/server.js | /usr/bin/multilog s1024000 {{log_path}} 2>&1
