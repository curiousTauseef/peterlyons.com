@import "nib/reset"
global-reset()
@import "layout"
@import "color"
@import "typography"

.clear
  clear both

body
  background-color $colorPrimaryBackground
  color $colorPrimary

a
  color $colorLink
  &:hover
    background-color $colorLinkHoverBackground

////////// lists //////////
li
  list-style-type disc
  margin-left 2em

////////// code //////////
//For inline code snippets (wrapping OK)
code, pre
  background-color $colorCodeBackground
  color $colorCode

code
  padding 0 0.2em

//For multiline code blocks (formatted, no wrapping)
pre
  margin 1em 0
  overflow auto
  padding 1em

