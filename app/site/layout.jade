- var title;
block variables
- if (title && title.indexOf(titleSuffix) < 0 && title.indexOf("Peter Lyons") !== 0) { title = title + titleSuffix }
doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title=title
    meta(name="description", content=title)
    meta(name="og:title", content=title)
    meta(name="keywords", content="peter lyons, pete lyons, web development, node.js, developer, coder, freelance, consultant, afronauts, boulder, colorado, turtle dove, startups, music, sax, saxophone, saxophonist, sunny daze, confunktion junction, oberlin, smartears, smart ears, big clock")
    meta(name="author", content="Peter Lyons")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/screen.css")
    link(href="/favicon.png", type="image/png", rel="icon")
    link(rel="alternate", type="application/atom+xml",
      href="/problog/feed", title="Pete's Points")
    link(rel="openid.server",
      href="http://www.livejournal.com/openid/server.bml")
    link(rel="openid.delegate", href="http://focusaurus.livejournal.com/")
    link(href="http://fonts.googleapis.com/css?family=PT+Sans|Inconsolata|Poly|Happy+Monkey",
      rel="stylesheet", type="text/css")

  body
    .respond
    include blocks/navigation
    .content
      include blocks/header
      block body
      footer.navigationHorizontal
        include blocks/navigation
      footer.license
        include blocks/license
    block scripts
      script(src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js")
      script.
        if (typeof jQuery === 'undefined') {
          document.write(unescape('%3Cscript src="/js/jquery.js" %3E%3C/script%3E'));
        }
      script(src="/js/lodash.js")
      :coffeescript
        $ ->
          $("nav a[href='#{document.location.pathname}']" ).addClass("current")
