- var title, angular, pageTitle;
block variables
- pageTitle = title;
- if (title && title.indexOf(titleSuffix) < 0 && title.indexOf("Peter Lyons") !== 0) { pageTitle = title + titleSuffix }
doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title=pageTitle
    link(rel="stylesheet", href="/screen.css")
    link(href="http://fonts.googleapis.com/css?family=Roboto:300,700%7CInconsolata%7CJulius+Sans+One",
      rel="stylesheet")
    link(href="/favicon.jpg", type="image/jpeg", rel="icon")
    link(rel="alternate", type="application/atom+xml",
      href="/problog/feed", title="Pete's Points")
    link(rel="author", type="text/plain", href="/humans.txt")
    link(rel="openid.server",
      href="http://www.livejournal.com/openid/server.bml")
    link(rel="openid.delegate", href="http://focusaurus.livejournal.com/")
    meta(name="description", content=title)
    meta(name="keywords", content="peter lyons, pete lyons, web development, node.js, developer, coder, freelance, consultant, afronauts, boulder, colorado, turtle dove, startups, music, sax, saxophone, saxophonist, sunny daze, confunktion junction, oberlin, smartears, smart ears, big clock")
    meta(name="author", content="Peter Lyons")
    meta(name="viewport", content="width=device-width, initial-scale=1")
  body
    //-.adaptive
    button.navMenuButton &#926;
    include blocks/navigation
    .content
      include blocks/header
      block body
      footer.navigationHorizontal
        include blocks/navigation
      footer.license
        include blocks/license
        script(
          data-gittip-username="focusaurus",
          data-gittip-widget="button"
          src="//gttp.co/v1.js"
          async
        )
      block scripts
        script(src="/browser.js")
        script require("app/browser/navigation")
