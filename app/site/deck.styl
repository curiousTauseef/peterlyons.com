@require "color"
@require "typography"

.slides
  h2
    fontSize(1)
    font-family $headerFont
    margin-bottom 1em
    +above("s")
      fontSize(6)

  h3
    +above("s")
      fontSize(5)

  h4
    +above("s")
      fontSize(4)

  li
    fontSize(0)
    +above("s")
      fontSize(3)
    line-height 2em
    // list-style-type none

  img
    max-height 50%
    max-width 90%
    +above("s")
      max-width 500px
      max-height 500px

  figcaption
    fontSize(-2)
    a
      text-decoration none
      color $colorLink

  code.block
    display block
    text-align left
    white-space pre-wrap

.reveal .controls
  div.navigate-right
    border-left-color grey
  div.navigate-left
    border-right-color grey
  div.navigate-up
    border-bottom-color grey
  div.navigate-down
    border-top-color grey
